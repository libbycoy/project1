<div class="uk-block uk-block uk-width-1-1 uk-margin-large-left">
<h1><%= @user.name%></h1>

<div class="uk-grid">
    <div class="uk-width-medium-1-3">
        <div class="uk-panel-box">
      <%= cl_image_tag(@user.image) %>
       <!-- <img src="<%= @user.image %>" class"profile"/> -->
      </div>
    </div>
    <div class="uk-width-medium-1-3">
        <div class="uk-panel-box">
          <p>New painting:</p>
          <%= link_to 'Create new', new_painting_path, class: 'uk-button'%>
        </div>
    </div>
    <div class="uk-width-medium-1-3">
        <div class="uk-panel-box">
          <p>Edit Profile:</p>
        <%= link_to 'Edit profile', edit_user_path, class: 'uk-button'%>
      </div>
    </div>
</div>

<div class="uk-block">
  <h2><%= @user.name %>'s Gallery</h2>
</div>
<div class="uk-slidenav-position" data-uk-slider>

    <div class="uk-slider-container">
        <ul class="uk-slider uk-grid-width-medium-1-4">
          <% @user.paintings.each do |painting| %>
            <li class=""><%= link_to cl_image_tag(painting.image), painting %>
            <div class="uk-flex-center uk-flex-middle"><h3><%= link_to painting.title, painting %></h3></div></li>
            <% end %>
        </ul>
        <a href="" class="uk-slidenav uk-slidenav-previous" data-uk-slider-item="previous"></a>
        <a href="" class="uk-slidenav uk-slidenav-next" data-uk-slider-item="next"></a>
    </div>

</div>

<div class="uk-block">
<h2><%= @user.name %>'s Favorites</h2>
</div>


<div class="uk-slidenav-position" data-uk-slider>

    <div class="uk-slider-container">
        <ul class="uk-slider uk-grid-width-medium-1-4">
          <% @user.favorites.each do |favorite| %>
            
            <li class=""><%= link_to cl_image_tag(favorite.painting.image) %>
            <div class="uk-flex-center uk-flex-middle"><h3><%= link_to favorite.painting.title %></h3></div></li>
            <% end %>
        </ul>
        <a href="" class="uk-slidenav uk-slidenav-previous" data-uk-slider-item="previous"></a>
        <a href="" class="uk-slidenav uk-slidenav-next" data-uk-slider-item="next"></a>
    </div>

</div>
