<div class="uk-width-1-1 uk-margin-large-left uk-margin-top">
  <h3 class="">Relax. It's painting time.</h1>

<div id="toolbar">
  <div id="colors">
  </div>

</div>
</div>

<div class="uk-grid">
    <div class="uk-width-2-3">
      <div class="uk-panel">

      <div id="paintboard" class="uk-margin-large-left">
        <canvas id="canvas2" height="600" width="600"></canvas>
        <canvas id="canvas" height="600" width="600"></canvas>
      </div>
    </div>

    </div>

    <div class="uk-width-1-3">
        <div class="uk-panel uk-panel-box">
          <a class="uk-button">
            <div id="clear">
            Clear screen
            </div>
          </a>
          <a class="uk-button">
            <div id="gradient">
            Gradient
            </div>
          </a>
          <div id="rad">
            Radius <span id="radval">10</span>
            <button id="decRad" class="uk-button">-</button>
            <button id="incRad" class="uk-button">+</button>
          </div>
          <h3>Select a template</h3>

        <div class="uk-grid">
            <div class="uk-width-medium-1-3">
              <a class="uk-button">
                <img id="duck" class="uk-thumbnail-mini" src="https://s-media-cache-ak0.pinimg.com/originals/87/12/69/87126906af681d2e9109b7b844ad11e5.png" alt="">
              </a>
              <div class="uk-thumbnail-caption">Mandala 1</div>
            </div>



            <div class="uk-width-medium-1-3">
              <a class="uk-button">
              <img id="duck" class="uk-thumbnail-mini" src="https://s-media-cache-ak0.pinimg.com/originals/87/12/69/87126906af681d2e9109b7b844ad11e5.png" alt=""></a>
              <div class="uk-thumbnail-caption">Mandala 1</div>
            </div>

            <div class="uk-width-medium-1-3">
              <a class="uk-button">
              <img id="duck" class="uk-thumbnail-mini" src="https://s-media-cache-ak0.pinimg.com/originals/87/12/69/87126906af681d2e9109b7b844ad11e5.png" alt="">
              </a>
              <div class="uk-thumbnail-caption">Mandala 2</div>
            </div>

            <div class="uk-width-medium-1-3">
              <a class="uk-button">
              <img id="duck" class="uk-thumbnail-mini" src="https://s-media-cache-ak0.pinimg.com/originals/87/12/69/87126906af681d2e9109b7b844ad11e5.png" alt="">
              </a>
              <div class="uk-thumbnail-caption">Mandala 1</div>
            </div>

            <div class="uk-width-medium-1-3">
              <a class="uk-button">
              <img class="uk-thumbnail-mini" src="https://s-media-cache-ak0.pinimg.com/originals/87/12/69/87126906af681d2e9109b7b844ad11e5.png" alt="">
              </a>
              <div class="uk-thumbnail-caption">Mandala 2</div>
            </div>

        </div>

        <div class="uk-panel uk-panel-box">
          <h3>Color Palette</h3>
          <form>
            Select your favorite color:
            <input type="color" id="bunny" value="#ffffff" name="favcolor">
          </form>
        </div>

        <div class="uk-panel uk-panel-box">
          <h3>Texture</h3>
            <a id="texture"class="uk-button">Crayon
            </a>
        </div>

        <div class="uk-panel uk-panel-box">
          <h3>Kitten</h3>
            <a id="kitten"class="uk-button">Kitten
            </a>
        </div>

        <div class="uk-panel uk-panel-box">
          <%= render :partial => 'form' %>
        </div>
    </div>
</div>



